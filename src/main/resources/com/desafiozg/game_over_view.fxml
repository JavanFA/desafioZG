<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #1a1a1a;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.desafiozg.GameOverController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Fim da Jornada" textFill="#e8e8e8">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label text="A escuridão te consumiu... mas a esperança ainda pode renascer." textFill="WHITE" />
      <Button onAction="#onContinuar" prefHeight="40.0" prefWidth="200.0" text="Jogar Novamente" />
      <Button onAction="#onSair" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #8B0000;" text="Sair do Jogo" textFill="WHITE" />
   </children>
</VBox>